<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:contentDescription="@string/content_description"
        app:srcCompat="@drawable/launch_icon_squat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:alpha="0.7"
        android:background="@drawable/textview_background">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_username"
            android:drawableRight="@drawable/ic_action_placeholder"
            android:gravity="center"
            android:hint="username"
            android:inputType="text"
            android:textColor="#ffff"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:background="@drawable/textview_background">

        <EditText
            android:id="@+id/txtPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_lock"
            android:drawableRight="@drawable/ic_action_placeholder"
            android:gravity="center"
            android:hint="password"
            android:inputType="text"
            android:textColor="#ffff"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:background="@drawable/textview_background">

        <EditText
            android:id="@+id/txtAlter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_age"
            android:drawableRight="@drawable/ic_action_placeholder"
            android:gravity="center"
            android:hint="age"
            android:inputType="numberSigned"
            android:textColor="#ffff"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:background="@drawable/textview_background">

        <EditText
            android:id="@+id/txtGewicht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_weight"
            android:drawableRight="@drawable/ic_action_placeholder"
            android:gravity="center"
            android:hint="weight"
            android:inputType="numberSigned"
            android:textColor="#ffff"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:background="@drawable/textview_background">

        <EditText
            android:id="@+id/txtGroesse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_height"
            android:drawableRight="@drawable/ic_action_placeholder"
            android:gravity="center"
            android:hint="height"
            android:inputType="numberSigned"
            android:textColor="#ffff"
            android:typeface="monospace" />

    </RelativeLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:text="Register" />

    <TextView
        android:id="@+id/lnkLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="test"
        android:text="@string/register_to_login"
        android:textColor="#ffff"
        android:textSize="13dp" />
</LinearLayout>